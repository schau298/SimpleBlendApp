<Window x:Class="SimpleBlendApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleBlendApp"
        mc:Ignorable="d"
        Title="Simple Application" Height="300" Width="400">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF1B72F0"/>
            <GradientStop Color="Black" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="177*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="TextLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" FontFamily="Arial Black" Foreground="#FF31E8C7" Margin="200,0,0,0" RenderTransformOrigin="-0.15,0.675"/>
        <Button x:Name="DisplayTextButton" Content="Display Text" HorizontalAlignment="Left" Height="24" Margin="170,225,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="DisplayText"/>
    </Grid>
</Window>
